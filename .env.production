# 生产环境变量配置
# Production Environment Variables

# ============================================
# Supabase 配置
# Supabase Configuration
# ============================================
# 你的 Supabase 项目 URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# 你的 Supabase 匿名密钥
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# 你的 Supabase 服务角色密钥（服务端使用，不要暴露给客户端）
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# 站点配置
# Site Configuration
# ============================================
# 站点 URL
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# 站点名称
NEXT_PUBLIC_SITE_NAME=PC Builder Studio

# ============================================
# 分析和监控
# Analytics and Monitoring
# ============================================
# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# ============================================
# Next.js 配置
# Next.js Configuration
# ============================================
# Node 环境
NODE_ENV=production

# API URL（可选，用于自定义 API 基础 URL）
NEXT_PUBLIC_API_URL=

# ============================================
# OAuth 配置（可选）
# OAuth Configuration (Optional)
# ============================================
# GitHub OAuth
NEXT_PUBLIC_GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# 功能开关
# Feature Flags
# ============================================
# 启用错误监控
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# 启用性能监控
NEXT_PUBLIC_ENABLE_PERFORMANCE_TRACKING=true

# 启用 A/B 测试
NEXT_PUBLIC_ENABLE_AB_TESTING=false

# ============================================
# 外部服务（可选）
# External Services (Optional)
# ============================================
# Sentry DSN（错误监控）
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Cloudinary Cloud Name（图片存储）
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe Publishable Key（支付）
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# 安全配置
# Security Configuration
# ============================================
# CSRF 密钥
CSRF_SECRET=your-csrf-secret-here

# Session 密钥
SESSION_SECRET=your-session-secret-here

# ============================================
# 日志配置
# Logging Configuration
# ============================================
# 日志级别
LOG_LEVEL=info

# 日志格式
LOG_FORMAT=json

# ============================================
# 缓存配置
# Caching Configuration
# ============================================
# Redis URL（可选）
REDIS_URL=redis://localhost:6379

# 缓存 TTL（秒）
CACHE_TTL=3600
